<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_margin="8dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_marginTop="59dp"
            android:fontFamily="casual"
            android:text="Add Item"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/itemName"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="129dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/itemName"
            android:layout_alignStart="@+id/itemName"
            android:layout_marginBottom="-129dp"
            android:text="Name of Item" />


        <EditText
            android:id="@+id/itemPrice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/itemName"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="33dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="$"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/itemName"
            android:layout_alignStart="@+id/itemPrice"
            android:layout_marginBottom="-129dp"
            android:text="Price" />

        <EditText
            android:id="@+id/itemDate"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:hint="01/01/2018"
            android:layout_alignStart="@+id/textView1"
            android:layout_alignTop="@+id/itemLocation"
            android:inputType="date"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/itemDate"
            android:layout_alignStart="@+id/textView1"
            android:layout_marginStart="2dp"
            android:text="Offer ends on:" />


        <EditText
            android:id="@+id/itemLocation"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/itemPrice"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="141dp"
            android:ems="10"
            android:inputType="number"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/itemLocation"
            android:layout_alignStart="@+id/itemPrice"
            android:layout_marginBottom="1dp"
            android:text="Aisle No" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="61dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="Add" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/addButton"
            android:layout_alignEnd="@+id/itemPrice"
            android:layout_marginTop="0dp"
            android:onClick="onClick"
            android:text="Cancel" />




    </RelativeLayout>
</LinearLayout>